{
  "scripts": {
    "build": "npm-run-all css:build ts:build js:build html:build",
    "watch": "npm-run-all css:build ts:build --parallel *:watch",
    "ts:build": "tsc --project .",
    "ts:watch": "tsc --watch --preserveWatchOutput --project .",
    "js:build": "browserify lib/index.js -o build/index.js",
    "js:watch": "watchify -d lib/index.js -o build/index.js",
    "html:build": "node scripts/render.js views/index.html",
    "html:watch": "watch 'npm run html:build' views/",
    "css:build": "node-sass --output-style compressed sass/style.sass -o build/",
    "css:watch": "node-sass --watch sass/style.sass -o build/",
    "preprocess": "node scripts/preprocess.js"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.15",
    "@types/ejs": "^3.0.1",
    "@types/luxon": "^1.21.0",
    "@types/zepto": "^1.0.30",
    "browserify": "^16.5.0",
    "chart.js": "^2.9.3",
    "ejs": "^3.0.1",
    "luxon": "^1.22.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3",
    "watch": "^1.0.2",
    "watchify": "^3.11.1",
    "zepto": "^1.2.0"
  }
}
